.header
  %h2 Diff
- @node_diffs.each do |node_name, diff|
  %h3= h node_name
  %table.inspector
    %thead
      %tr
        %th Resource
        %th Property
        %th Expected
        %th Actual
    %tbody
      - diff.each do |resource, properties_hash|
        - if properties_hash
          - properties_hash.each do |property, expected_actual|
            - expected, actual = expected_actual
            %tr
              %td{:id => h(resource)}= h resource
              %td= h property
              %td= h expected
              %td= h actual
