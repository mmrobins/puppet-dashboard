.header
  %h2 Diff
%table.inspector
  %thead
    %tr
      %th Resource
      %th Property
      %th Expected
      %th Actual
  %tbody
    - @diff.each do |resource, properties_hash|
      = resource.inspect
      = properties_hash.inspect
      - if properties_hash
        - properties_hash.each do |property, expected_actual|
          - expected, actual = expected_actual
          %tr
            %td{:id => h(resource)}= h resource
            %td= h property
            %td= h expected
            %td= h actual
